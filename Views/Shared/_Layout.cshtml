<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        footer {
            position: absolute;
            bottom: 10px;
            width: 100%;
            text-align: center;
            font-size: 20px;
            color: gray;
        }
        html, body {
            height: 100%;
        }
        .background {
            background: rgba(250, 250, 250, 0.7);
            height: 100%;
        }
        .navbar {
            height: 70px;
        }
        .navbar-inverse {
            color: #6f2dbd;
        }
        .baotou {
           padding: 0;
           height: 70px;
           line-height: 70px;
            font-family: 字魂御守锦书;
            font-size: 40px;
            color: #907ad6;
        }
        .baotou:hover {
            color: #dabfff;
        }
        .navbar-nav > li > a {
            margin-right: 10px;
            padding: 0 20px;
            height: 70px;
            line-height: 70px;
            text-align: center;
            font-size: 16px;
            color: #907ad6;
        }
        .height {
            height: 70px;
            font-weight: bold;
        }
        .topnav {
            background-color: #333333;
        }
    </style>
</head>
<body>
    <div class="bg">
        <div class="background">
            <div class="navbar navbar-fixed-top topnav">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("包 头 市 公 交 查 询", "Search", "Main", new { area = "" }, new { @class = "navbar-brand baotou" })
                    </div>
                    <div class="navbar-collapse collapse padding0 height100">
                        <ul class="nav navbar-nav navbar-right height">
                            <li class="height">@Html.ActionLink(" 公 告 ", "News", "Main")</li>
                            <li class="height">@Html.ActionLink(" 登 录 ", "Login", "Main")</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container body-content">
                @RenderBody()

                <footer>
                    <hr />
                    <p style="font-family:Aa-Roseonly;">&copy; @DateTime.Now.Year - Von's Bus Search Project</p>
                </footer>
            </div>
        </div>
    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
